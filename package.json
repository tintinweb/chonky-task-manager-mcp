{
  "name": "chonky-task-manager-mcp",
  "version": "1.0.0",
  "description": "Structured LLM Task Management for Agents via MCP",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "chonky-task-manager-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:extension": "cd vscode-extension && npm run compile",
    "build:extension:prod": "cd vscode-extension && npm run compile:prod",
    "start": "node build/index.js stdio",
    "start:sse": "node build/index.js sse 3000",
    "start:both": "node build/index.js both 3000",
    "dev": "tsc && node build/index.js stdio",
    "dev:sse": "tsc && node build/index.js sse 3000",
    "test": "npm run build && mocha 'build/test/**/*.test.js'",
    "test:watch": "npm run build && mocha 'build/test/**/*.test.js' --watch",
    "test:coverage": "c8 npm test",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "task",
    "task-management"
  ],
  "author": "tintinweb",
  "license": "Chonky Proprietary License",
  "repository": {
    "type": "git",
    "url": "https://github.com/tintinweb/chonky-task-manager-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/tintinweb/chonky-task-manager-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "c8": "^10.1.2",
    "eslint": "^9.35.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
