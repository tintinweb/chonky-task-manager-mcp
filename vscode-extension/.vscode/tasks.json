      },
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "npm",
      "script": "lint",
      "group": "test",
      "presentation": {
        "panel": "shared",
        "group": "lint"
      },
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "presentation": {
        "panel": "shared",
        "group": "test"
      }
    }
  ]
}
