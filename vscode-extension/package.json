{
  "name": "chonky-task-manager",
  "displayName": "Chonky Task Manager",
  "description": "Structured LLM Task Management for VSCode Copilot Agents",
  "version": "0.1.2",
  "preview": true,
  "icon": "img/chonky-blue-tasks.png",
  "keywords": [
    "agents",
    "LLM",
    "languageModelTools",
    "tasks",
    "task-management"
  ],
  "publisher": "tintinweb",
  "repository": {
    "type": "git",
    "url": "https://github.com/tintinweb/chonky-task-manager-mcp.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "AI",
    "Chat"
  ],
  "license": "Chonky Proprietary License",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelTools": [
      {
        "name": "chonky-task-manager-create-project",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerCreateProject",
        "displayName": "Chonky Task Manager Create Project",
        "modelDescription": "Create a new task management project",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "description": "Optional project description"
            }
          },
          "required": [
            "name"
          ]
        }
      },
      {
        "name": "chonky-task-manager-add-task",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerAddTask",
        "displayName": "Chonky Task Manager Add Task",
        "modelDescription": "Add a new task with manual specification of all details",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")"
            },
            "title": {
              "type": "string",
              "description": "Task title",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "description": "Task description",
              "minLength": 1
            },
            "details": {
              "type": "string",
              "description": "Detailed implementation notes and requirements"
            },
            "successCriteria": {
              "type": "string",
              "description": "Testing approach and verification strategy"
            },
            "priority": {
              "type": "string",
              "enum": [
                "low",
                "medium",
                "high"
              ],
              "default": "medium",
              "description": "Task priority"
            },
            "dependencies": {
              "type": "array",
              "items": {
                "type": "number"
              },
              "description": "Array of task IDs this depends on",
              "default": []
            },
            "parentTaskId": {
              "type": "number",
              "description": "Parent task ID for subtasks"
            }
          },
          "required": [
            "project",
            "title",
            "description"
          ]
        }
      },
      {
        "name": "chonky-task-manager-batch-add-tasks",
        "tags": [
          "task-management",
          "batch"
        ],
        "toolReferenceName": "taskManagerBatchAddTasks",
        "displayName": "Chonky Task Manager Batch Add Tasks",
        "modelDescription": "Add multiple tasks to a project at once for efficient project setup",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")",
              "minLength": 1
            },
            "tasks": {
              "type": "array",
              "description": "Array of tasks to create",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Task title",
                    "minLength": 1
                  },
                  "description": {
                    "type": "string",
                    "description": "Task description",
                    "minLength": 1
                  },
                  "details": {
                    "type": "string",
                    "description": "Detailed implementation notes and requirements"
                  },
                  "successCriteria": {
                    "type": "string",
                    "description": "Testing approach and verification strategy"
                  },
                  "priority": {
                    "type": "string",
                    "enum": [
                      "low",
                      "medium",
                      "high"
                    ],
                    "default": "medium",
                    "description": "Task priority"
                  },
                  "dependencies": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "default": [],
                    "description": "Array of task IDs this task depends on"
                  },
                  "parentTaskId": {
                    "type": "number",
                    "description": "Parent task ID for subtasks"
                  }
                },
                "required": [
                  "title",
                  "description"
                ]
              }
            }
          },
          "required": [
            "project",
            "tasks"
          ]
        }
      },
      {
        "name": "chonky-task-manager-list-tasks",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerListTasks",
        "displayName": "Chonky Task Manager List Tasks",
        "modelDescription": "List tasks with filtering, statistics, and next task recommendation",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")"
            },
            "status": {
              "type": "string",
              "enum": [
                "pending",
                "in-progress",
                "done",
                "blocked",
                "deferred",
                "cancelled",
                "review"
              ],
              "description": "Filter by task status"
            },
            "withSubtasks": {
              "type": "boolean",
              "default": false,
              "description": "Include subtasks in listing"
            },
            "showStats": {
              "type": "boolean",
              "default": true,
              "description": "Show project statistics dashboard"
            },
            "outputFormat": {
              "type": "string",
              "enum": [
                "table",
                "compact",
                "json"
              ],
              "default": "table",
              "description": "Output format"
            }
          },
          "required": [
            "project"
          ]
        }
      },
      {
        "name": "chonky-task-manager-update-task",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerUpdateTask",
        "displayName": "Chonky Task Manager Update Task",
        "modelDescription": "Update task status and notes with workflow enforcement for task completion",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")"
            },
            "taskId": {
              "type": "string",
              "description": "Task ID (e.g., \"1\" for task, \"1.2\" for subtask)"
            },
            "status": {
              "type": "string",
              "enum": [
                "pending",
                "in-progress",
                "done",
                "blocked",
                "deferred",
                "cancelled",
                "review"
              ],
              "description": "New status for the task/subtask (optional - if not provided, only notes are updated)"
            },
            "notes": {
              "type": "string",
              "description": "Required notes about the update, progress, findings, or completion proof"
            }
          },
          "required": [
            "project",
            "taskId",
            "notes"
          ]
        }
      },
      {
        "name": "chonky-task-manager-next-task",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerNextTask",
        "displayName": "Chonky Task Manager Next Task",
        "modelDescription": "Find the next recommended task to work on based on dependencies and priority",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")"
            },
            "showAlternatives": {
              "type": "boolean",
              "default": true,
              "description": "Show alternative ready tasks"
            },
            "includeBlocked": {
              "type": "boolean",
              "default": false,
              "description": "Include information about blocked tasks"
            }
          },
          "required": [
            "project"
          ]
        }
      },
      {
        "name": "chonky-task-manager-manage-dependencies",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerManageDependencies",
        "displayName": "Chonky Task Manager Manage Dependencies",
        "modelDescription": "Add or remove dependencies between tasks with circular dependency checking",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")"
            },
            "taskId": {
              "type": "number",
              "description": "ID of the task to modify dependencies for"
            },
            "operation": {
              "type": "string",
              "enum": [
                "add",
                "remove"
              ],
              "description": "Operation to perform (add or remove dependency)"
            },
            "dependencyId": {
              "type": "number",
              "description": "ID of the task that this task depends on"
            }
          },
          "required": [
            "project",
            "taskId",
            "operation",
            "dependencyId"
          ]
        }
      },
      {
        "name": "chonky-task-manager-get-task",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerGetTask",
        "displayName": "Chonky Task Manager Get Task",
        "modelDescription": "Get detailed information about a specific task including all states and notes",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")"
            },
            "taskId": {
              "type": "string",
              "description": "Task ID (e.g., \"1\" for task, \"1.2\" for subtask)"
            }
          },
          "required": [
            "project",
            "taskId"
          ]
        }
      },
      {
        "name": "chonky-task-manager-import-export",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerImportExport",
        "displayName": "Chonky Task Manager Import Export",
        "modelDescription": "Export complete project memory to JSON file or import project snapshot from JSON file",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "operation": {
              "type": "string",
              "enum": [
                "export",
                "import"
              ],
              "description": "Operation to perform: export project to file or import project from file"
            },
            "project": {
              "type": "string",
              "description": "Project name: max 30 chars, no spaces, use dashes/underscores (e.g. \"my-audit-project\")"
            },
            "filePath": {
              "type": "string",
              "description": "Absolute file path for export/import (must end with .json)"
            }
          },
          "required": [
            "operation",
            "project",
            "filePath"
          ]
        }
      },
      {
        "name": "chonky-task-manager-import-folder",
        "tags": [
          "task-management"
        ],
        "toolReferenceName": "taskManagerImportFolder",
        "displayName": "Chonky Task Manager Import Folder",
        "modelDescription": "Recursively import tasks from markdown files in .chonky/tasks-manager folder structure",
        "canBeReferencedInPrompt": true,
        "icon": "$(tasklist)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "folderPath": {
              "type": "string",
              "description": "Path to folder containing task markdown files (e.g., \"/path/to/.chonky/tasks-manager\")"
            },
            "projectName": {
              "type": "string",
              "description": "Project name (defaults to folder name): max 30 chars, no spaces, use dashes/underscores"
            },
            "createProject": {
              "type": "boolean",
              "default": true,
              "description": "Auto-create project if it does not exist"
            },
            "overwrite": {
              "type": "boolean",
              "default": false,
              "description": "Overwrite existing project tasks (default: false for safety)"
            }
          },
          "required": [
            "folderPath"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "npm run build:mcp && node build.js",
    "compile:prod": "npm run build:mcp && node build.js --production",
    "build:mcp": "cd .. && npm run build",
    "watch": "node build.js --watch",
    "typecheck": "tsc -p ./tsconfig.check.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.8",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.4.1",
    "chonky-task-manager-mcp": "file:../",
    "esbuild": "^0.25.8",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  }
}
